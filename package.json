{
  "name": "todo-api-app",
  "version": "1.0.0",
  "description": "Sample application for SLIP 4 Q2 - Jenkins Scripted Pipeline with CI/CD",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "npm run lint && echo 'Build completed successfully'",
    "lint": "echo 'Linting passed'",
    "start": "node src/index.js",
    "deploy": "node scripts/deploy.js"
  },
  "keywords": [
    "todo",
    "api",
    "unit-testing",
    "jenkins",
    "devops",
    "ci-cd"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}

